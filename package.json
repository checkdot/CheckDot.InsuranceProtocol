{
  "name": "checkdot-insurance-protocol",
  "version": "1.0.0",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "npx prettier --write ./contracts",

    "verifyPool": "truffle run verify CheckDotPoolFactory --network bsc",
    "verifyPoolProxy": "truffle run verify UpgradableCheckDotPoolFactory --network bsc",

    "verifyProtocol": "truffle run verify CheckDotInsuranceProtocol --network bsc",
    "verifyProtocolProxy": "truffle run verify UpgradableCheckDotInsuranceProtocol --network bsc",

    "verifyStore": "truffle run verify CheckDotInsuranceStore --network bsc",
    "verifyStoreProxy": "truffle run verify UpgradableCheckDotInsuranceStore --network bsc",

    "verifyToken": "truffle run verify CheckDotERC721InsuranceToken --network bsc",
    "verifyTokenProxy": "truffle run verify UpgradableCheckDotERC721InsuranceToken --network bsc",

    "deployPool": "truffle migrate -f 1 --to 1",
    "deployPoolProxy": "truffle migrate -f 10 --to 10",
    "upgradePoolProxy": "truffle migrate -f 20 --to 20",

    "deployProtocol": "truffle migrate -f 2 --to 2",
    "deployProtocolProxy": "truffle migrate -f 11 --to 11",
    "upgradeProtocolProxy": "truffle migrate -f 21 --to 21",

    "deployStore": "truffle migrate -f 3 --to 3",
    "deployStoreProxy": "truffle migrate -f 12 --to 12",
    "upgradeStoreProxy": "truffle migrate -f 22 --to 22",

    "deployToken": "truffle migrate -f 4 --to 4",
    "deployTokenProxy": "truffle migrate -f 13 --to 13",
    "upgradeTokenProxy": "truffle migrate -f 23 --to 23"
  },
  "author": "CheckDot Team",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^4.0.0",
    "@openzeppelin/test-helpers": "^0.5.11",
    "@truffle/hdwallet-provider": "^1.3.0",
    "solidity-coverage": "^0.7.17",
    "truffle": "^5.4.10",
    "truffle-assertions": "^0.9.2",
    "truffle-contract": "^4.0.31",
    "truffle-plugin-verify": "^0.5.16"
  },
  "devDependencies": {
    "prettier": "2.4.1"
  }
}
